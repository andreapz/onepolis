{% extends 'admin/layout.html.twig' %}

{% block main %}
    {% if is_granted('ROLE_ADMIN') %}
    <h1>{{ 'title.hotel_new'|trans }}</h1>

    {{ form_start(form) }}
        {{ form_row(form.name) }}
        {{ form_row(form.description) }}
        
        <h4>{{ 'label.room'|trans }}</h3>
        
        <ul class="rooms_hotel" data-prototype="{{ form_widget(form.rooms.vars.prototype)|e('html_attr') }}">
        <p class="rooms">
            {% for room in form.rooms %}
                <li class="room_hotel_form">
                    <div id="hotel_rooms_{{ loop.index0 }}">
                        {{ form_row(room.name) }}
                        {{ form_row(room.description) }}
                        {{ form_row(room.total) }}
                    </div>
                </li>
        {% endfor %}        
        </ul>
        
        <input type="submit" value="{{ 'label.create_hotel'|trans }}" class="btn btn-primary" />
        <a href="{{ path('admin_hotels') }}" class="btn btn-link">
            {{ 'action.back_to_list'|trans }}
        </a>

    {{ form_end(form) }}
    {% endif %}
{% endblock %}
