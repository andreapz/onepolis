{% extends 'admin/layout.html.twig' %}

{% block main %}
    <h1>{{ 'title.restaurant_list'|trans }}</h1>

    <a href="{{ path('admin_restaurant_new') }}" class="btn btn-sm btn-primary">
        <i class="fa fa-plus" aria-hidden="true"></i> {{ 'action.add'|trans }}
    </a>
                        
    <table class="table table-striped table-middle-aligned">
        <thead>
            <tr>
                <th scope="col">{{ 'label.name'|trans }}</th>
                <th scope="col" class="text-center"><i class="fa fa-cogs" aria-hidden="true"></i> {{ 'label.actions'|trans }}</th>
            </tr>
        </thead>
        <tbody>
        {% for restaurant in restaurants %}
            <tr>
                <td>{{ restaurant.name }}</td>
                <td class="text-right">
                    <div class="item-actions">
                        <a href="{{ path('restaurant_show', {id: restaurant.id}) }}" class="btn btn-sm btn-default">
                            {{ 'action.show'|trans }}
                        </a>

                        <a href="{{ path('admin_restaurant_edit', {id: restaurant.id}) }}" class="btn btn-sm btn-primary">
                            <i class="fa fa-edit" aria-hidden="true"></i> {{ 'action.edit'|trans }}
                        </a>
                    </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4" align="center">{{ 'restaurant.no_restaurant_found'|trans }}</td>
           </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
