{% extends 'admin/layout.html.twig' %}

{% block main %}
    <h1>{{ 'title.event_list'|trans }}</h1>

    <a href="{{ path('admin_event_new') }}" class="btn btn-sm btn-primary">
        <i class="fa fa-plus" aria-hidden="true"></i> {{ 'action.add'|trans }}
    </a>
                        
    <table class="table table-striped table-middle-aligned">
        <thead>
            <tr>
                <th scope="col">{{ 'label.title'|trans }}</th>
                <th scope="col" class="text-center"><i class="fa fa-cogs" aria-hidden="true"></i> {{ 'label.actions'|trans }}</th>
            </tr>
        </thead>
        <tbody>
        {% for event in events %}
            <tr>
                <td><a href="{{ path('event_show', {id: event.id}) }}" class="btn btn-sm btn-default">
                    {{ event.title }}
                </a></td>
                <td class="text-right">
                    <div class="item-actions">
                        <a href="{{ path('event_show', {id: event.id}) }}" class="btn btn-sm btn-default">
                            {{ 'action.show'|trans }}
                        </a>

                        <a href="{{ path('admin_event_edit', {id: event.id}) }}" class="btn btn-sm btn-primary">
                            <i class="fa fa-edit" aria-hidden="true"></i> {{ 'action.edit'|trans }}
                        </a>
                    </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4" align="center">{{ 'event.no_event_found'|trans }}</td>
           </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
