{% extends 'admin/layout.html.twig' %}

{% block sidebar %}

    
    
{% endblock %}
{% block bigform %}

    {% for task in event.tasks %}
     
        <div class="col-lg-6">
            <ul class="nav nav-pills flex-column list-group">
            <li class="list-group-item d-flex justify-content-between align-items-center nav-item bg-primary"><h4><a href="{{ path('task_show', {id: task.id}) }}" class="nav-link active">{{ 'task.task'|trans|raw }} {{ task.id }}</a></h4></li>
            {% for citizen in task.citizens %}
                <li class="list-group-item d-flex justify-content-between align-items-center">
                <a href="{{ path('task_show', {id: task.id}) }}" class="text-dark">{{ citizen.name }} {{ citizen.surname }}, {{ citizen.cityBirth }} {{ citizen.birthDate|date('d/m/Y') }}</a></span></li>
            {% endfor %}
            
            {% if task.ordered %}
                <li class="list-group-item d-flex justify-content-between align-items-center"><span class="text-dark">
                {{ 'one.task_amount'|trans|raw }}: {{ task.amount }}â‚¬</span></li>
                <li class="list-group-item d-flex justify-content-between align-items-center"><span class="text-dark">
                {{ 'one.task_order_date'|trans|raw }}: {{ task.orderedDate|date('d/m/Y') }}</span></li>
                <li class="list-group-item d-flex justify-content-between align-items-center"><span class="text-dark">
                {{ 'one.task_code'|trans|raw }}: {{ task.code }}
                </span></li>
            {% endif %}
            </ul>
        </div>
            
    {% endfor %}
    
{% endblock %}
